<Window x:Class="KarvinenApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Process Paths" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Database Search:"/>
            <TextBox x:Name="txtPath1"/>

            <TextBlock Text="Log Analyzer:"/>
            <TextBox x:Name="txtPath2"/>

            <TextBlock Text="File Processor:"/>
            <TextBox x:Name="txtPath3"/>

            <TextBlock Text="System Report:"/>
            <TextBox x:Name="txtPath4"/>

            <TextBlock Text="Data Sync:"/>
            <TextBox x:Name="txtPath5"/>

            <Button Content="Save Settings" Click="SaveSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>