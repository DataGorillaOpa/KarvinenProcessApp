<Window x:Class="KarvinenApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KarvinenApp"
        mc:Ignorable="d"
        Title="Script Launcher" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        
        
        
        <!-- Button Style -->
        <Style x:Key="ScriptButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4E4E4E"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#5E5E5E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2E2E2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Animation for button movement -->
        <Storyboard x:Key="MoveButtonAnimation">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="Margin">
                <EasingThicknessKeyFrame KeyTime="0:0:0.3" Value="0,20,0,0">
                    <EasingThicknessKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingThicknessKeyFrame.EasingFunction>
                </EasingThicknessKeyFrame>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="20">
            <TextBlock Text="SCRIPT LAUNCHER" 
                     Foreground="White" 
                     FontSize="24" 
                     FontWeight="Bold"
                     HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Original Button Panel (hidden when active) -->
            <StackPanel x:Name="OriginalButtonPanel" Grid.ColumnSpan="2">
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button x:Name="btnScript1" 
                            Content="Start Data Processing" 
                            Style="{StaticResource ScriptButtonStyle}"
                            Background="#007ACC"
                            Click="DatabaseBackup_Click"/>
                    <Button x:Name="btnScript2" 
                            Content="Log Analyzer" 
                            Style="{StaticResource ScriptButtonStyle}"
                            Background="#68217A"
                            Click="Button_Click"/>

                    <Button x:Name="btnScript3" 
                            Content="File Processor" 
                            Style="{StaticResource ScriptButtonStyle}"
                            Background="#D83B01"
                            Click="Button_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button x:Name="btnSettings" 
                            Content="⚙ Settings" 
                            Style="{StaticResource ScriptButtonStyle}"
                            Background="#498205"
                            Click="OpenSettings_Click"/>

                </StackPanel>
            </StackPanel>

            <!-- Active Button Panel (shown when Database Backup is clicked) -->
            <StackPanel x:Name="ActiveButtonPanel" 
                       Grid.ColumnSpan="2"
                       Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,20,0,0"
                       Visibility="Collapsed">
                <Button x:Name="ActiveScriptButton"
                        Style="{StaticResource ScriptButtonStyle}"
                        Background="#007ACC"
                        Margin="0,0,10,0"/>

                <Button x:Name="btnQuitScript" 
                        Content="Quit" 
                        Style="{StaticResource ScriptButtonStyle}"
                        Background="#F44336"
                        Click="QuitScript_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>